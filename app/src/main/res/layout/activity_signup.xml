<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.Authentication.SignUp.SignupActivity">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome "
            android:textSize="40dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="40dp"
            android:layout_marginRight="20dp"
            android:textStyle="bold"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/ConnectingIsb"
            android:layout_below="@+id/header_title"
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Connnecting Islamabad"
            android:textSize="28dp"
            android:textColor="@color/black"
            />

        <TextView
            android:id="@+id/fillForm"
            android:layout_below="@+id/ConnectingIsb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Fill the details to create account"
            android:textColor="@color/black"
            />

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/name"
            android:layout_below="@id/fillForm"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:hint="Name"
            android:textColorHint="@color/black"
            android:background="@drawable/stoke_background"
            android:drawableRight="@drawable/person_icon"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/email"
            android:layout_below="@id/name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:drawablePadding="15dp"
            android:hint="Email"
            android:textColorHint="@color/black"
            android:background="@drawable/stoke_background"
            android:drawableRight="@drawable/mail_icon"/>


        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/password"
            android:layout_below="@id/email"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:background="@drawable/stoke_background"
            android:drawableRight="@drawable/password_icon"/>

        <androidx.appcompat.widget.AppCompatEditText
            android:id="@+id/confirmpassword"
            android:layout_below="@id/password"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:drawablePadding="10dp"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColorHint="@color/black"
            android:background="@drawable/stoke_background"
            android:drawableRight="@drawable/password_icon"/>


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmpassword"
            android:layout_toStartOf="@+id/signInRedirect"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="5dp"
            android:text="Aleready have account ? " />

        <TextView
            android:id="@+id/signInRedirect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/confirmpassword"
            android:layout_alignEnd="@+id/confirmpassword"
            android:layout_marginTop="10dp"
            android:text="Sign In"
            android:textStyle="normal"
            android:textColor="@color/blue"/>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/signupBtn"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_below="@+id/signInRedirect"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:padding="15dp"
            android:background="@drawable/background_orange"
            android:hint="Sign Up"
            android:textColorHint="@color/white"
            android:textStyle="bold" />


    </RelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>